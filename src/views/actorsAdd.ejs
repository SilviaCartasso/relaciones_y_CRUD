<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actors add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
    </figure>
    <h1 class="titulo">Agregar Actor</h1>
    <br>

    <% if (locals.errors) { %>
        <ul>
            <% Object.keys(errors).forEach(error=> { %>
                <li><%- errors[error].msg %></li>
                <% }) %>
        </ul>
        <% } %>

            <section class="formulario">
                <form action="/actors/create" method="POST">
                    <label for="first_name">Nombre </label>
                    <p><input type="text" name="first_name" id="first_name"></p>
                    <label for="last_name">Apellido </label>
                    <p><input type="text" name="last_name" id="last_name"></p>
                    <label for="rating">Rating </label>
                    <p><input type="number" name="rating" id=""> </p>
                    <label for="favorite_movie_id">Película Favorita</label><br>
                    <select name="favorite_movie_id" id="favorite_movie_id" >
                        <option value="" selected > Selecciona la película favorita del actor</option>
                        <% movies.forEach(movie => { %>
                            <option value="<%- movie.id %>"><%- movie.title %></option>
                         
                        <% }) %>
                    </select><br>
                    <br>
                    <p> <button class="botonAgregar" type="submit">Agregar</button>

                        <a class="botonVolver" href="/actors">Listado de Actores</a>
                    </p>
                </form>
            </section>

</body>

</html>